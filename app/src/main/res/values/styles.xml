<?xml version="1.0" encoding="utf-8"?>
<resources  xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.GitHubRepositories" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.GitHubRepositories.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GitHubRepositories.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GitHubRepositories.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ToolbarTitleStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_18sp</item>
        <item name="android:maxEms">15</item>
    </style>

    <style name="FilterItemStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_12sp</item>
        <item name="android:background">@drawable/filter_item_selected</item>
        <item name="android:paddingStart">@dimen/padding_28dp</item>
        <item name="android:paddingLeft">@dimen/padding_28dp</item>
        <item name="android:paddingTop">@dimen/padding_10dp</item>
        <item name="android:paddingEnd">@dimen/padding_28dp</item>
        <item name="android:paddingRight">@dimen/padding_28dp</item>
        <item name="android:paddingBottom">@dimen/padding_10dp</item>
    </style>


</resources>